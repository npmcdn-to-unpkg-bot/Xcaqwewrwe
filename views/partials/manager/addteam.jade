                br
                br
                input.form-control.sharp.center(ng-model='memberName',type='text', name='memberName', placeholder='Name', style='width: 30%;' )
                br
                input.form-control.sharp.center(ng-model='memberRole',type='text', name='memberRole', placeholder='Role', style='width: 30%;' )
